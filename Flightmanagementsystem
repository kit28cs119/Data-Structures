#include <iostream>
#include <vector>
#include <queue>
using namespace std;
class FlightNetwork {
int n;
vector<vector<int>> adj;
public:
FlightNetwork(int airports) {
n = airports;
adj.resize(n);
}
void addFlight(int u, int v) {
adj[u].push_back(v);
adj[v].push_back(u);
}
void displayNetwork() {
cout << "\nFlight Network Connections:\n";
for (int i = 0; i < n; i++) {
cout << "Airport " << i << " -> ";
for (int j : adj[i]) {
cout << j << " ";
}
cout << endl;
}
}
void bfs(int start) {
vector<bool> visited(n, false);
queue<int> q;
visited[start] = true;
q.push(start);
cout << "\nBFS Traversal from Airport " << start << ": ";
while (!q.empty()) {
int u = q.front(); q.pop();
cout << u << " ";
for (int v : adj[u]) {
if (!visited[v]) {
visited[v] = true;
q.push(v);
}
}
}
cout << endl;
}
};
int main() {
int airports, flights;
cout << "Enter number of airports: ";
cin >> airports;
FlightNetwork fn(airports);
cout << "Enter number of flights: ";
cin >> flights;
cout << "Enter flight connections (source destination):\n";
for (int i = 0; i < flights; i++) {
int u, v;
cin >> u >> v;
fn.addFlight(u, v);
}
fn.displayNetwork();
int start;
cout << "Enter starting airport for BFS traversal: ";
cin >> start;
fn.bfs(start);
return 0;
}
